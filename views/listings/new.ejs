<%- layout("layouts/boilerplate.ejs") %>

  <body>
    <div class="row">
      <h1 class="col-8 offset-2">List Your Space</h1>

      <form enctype="multipart/form-data" action="/listings" method="post" class="form needs-validation" novalidate>
        <div class="col-8 offset-2">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" required id="title" class="form-control"
              placeholder="Add a catchy title" required />
            <div class="invalid-feedback">please enter a title</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description

            </label>
            <textarea name="listing[description]" id="description" class="form-control" placeholder="write discription"
              rows="3" cols="50" required></textarea>
            <div class="invalid-feedback">Please write a short description</div>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="listing[image]" id="image" class="form-control" placeholder="Add an image"
              required />
          </div>

          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price</label>
              <input type="number" name="listing[price]" id="price" class="form-control" placeholder="1200" required />
              <div class="invalid-feedback">Price must be a valid number</div>
            </div>

            <div class="mb-3 col-md-8">
              <label for="country" class="form-label">country</label>
              <input type="text" name="listing[country]" id="country" class="form-control" placeholder="India"
                required />
              <div class="invalid-feedback">country should be valid.</div>
            </div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" id="location" class="form-control"
              placeholder="Jaipur, Rajastan" required />
            <div class="invalid-feedback">location should be valid.</div>
          </div>
          <select name="listing[category]" id="category" class="form-select mb-3">
            <option disabled selected>Select a category</option>
            <option value="trending">Trending</option>
            <option value="farms">Farms</option>
            <option value="rooms">Rooms</option>
            <option value="beachfront">Beachfront</option>
            <option value="iconicCities">Iconic Cities</option>
            <option value="amazingView">Amazing View</option>
            <option value="petFriendly">Pet Friendly</option>
            <option value="pools">Pools</option>
            <option value="luxury">Luxury</option>
            <option value="surfing">Surfing</option>
            <option value="boating">Boating</option>
          </select>

          <button class="btn btn-danger mb-3">Add</button>
        </div>
      </form>
    </div>
  </body>